{
  "mcpServers": {
    "codebase-intelligence": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info"
      }
    },
    "codebase-intelligence-dev": {
      "command": "npx",
      "args": ["ts-node", "src/index.ts"],
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug"
      }
    }
  },
  "globalShortcuts": {},
  "ui": {
    "theme": "auto"
  },
  "security": {
    "allowedOrigins": []
  }
}